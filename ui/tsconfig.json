{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "lib": [
      "esnext",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/build/*", "**/node_modules/*"]
}
