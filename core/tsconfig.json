{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es6",
      "es2016.array.include"
    ]
  },
  "include": [
    "./model/**/*.ts"
  ]
}
