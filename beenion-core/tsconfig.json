{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/build/*",
    "**/node_modules/*"
  ]
}
